<script src="https://cdn.sheetjs.com/xlsx-0.20.0/package/dist/xlsx.full.min.js"></script>
<script src="/js/Compra/listar.js"></script>
<div>
    <h1>Compras cadastrados</h1>

    
    <div>
        <a class="btn btn-primary" id="btnCadastrarCompras" href="/compras/cadastrar">Cadastrar compra</a>
        <button id="btnExportarPdf" onclick="window.print()" class="btn btn-primary">Exportar para PDF</button>
        <button id="btnExportarExcel" class="btn btn-primary">Exportar para Excel</button>
    </div>

    <table style="margin-top:10px" id="tabelaCompras" class="table table-stripped">
        <thead>
            <th>Nº da Nota</th>
            <th>Fornecedor</th>
            <th>Valor</th>
            <th>Data</th>
            <!-- <th>Ações</th> -->
        </thead>
        <tbody>
            <% for(let i=0; i<lista.length; i++) { %>

                <tr>
                    <td><%= lista[i].compCod %></td>
                    <td><%= lista[i].fornNome %></td>
                    <td><%= lista[i].compValor %></td>
                    <td class="dataFormatada"><%= lista[i].compData %></td>
                    <!-- <td>
                        <div>
                            <a href="/compras/alterar/<%= lista[i].compCodigo %>" class="btn btn-primary">
                                <i class="fas fa-pen"></i>
                            </a>
                            <button data-id="<%= lista[i].compCodigo %>" class="btn btn-danger btnExclusao">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td> -->
                </tr>

            <% } %>
        </tbody>
    </table>
</div>